{
  "name": "digiventures/sdk",
  "description": "SDK oficial para integrar con la API de Digiventures",
  "version": "1.0.2",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Digiventures\\SDK\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Digiventures\\SDK\\Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Digiventures",
      "email": "developers@digiventures.com.ar"
    }
  ],
  "require": {
    "php": ">=7.4",
    "guzzlehttp/guzzle": "^7.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs --standard=PSR12 src"
  }
}
